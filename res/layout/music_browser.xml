<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="96dip"
	android:padding="6dip">

	<!--   -->
	<TextView
		android:id="@+id/file_format"
		android:layout_width="35dip"
		android:layout_height="20dip"
		android:layout_alignLeft="@+id/file_icon"
		android:layout_toRightOf="@id/file_icon"
		android:scrollHorizontally="true"
		android:gravity="center_vertical"
		 />

	<TextView
		android:id="@+id/file_size"
		android:layout_width="100dip"
		android:layout_height="20dip"
		android:layout_gravity="center_vertical"
		android:layout_toRightOf="@id/file_format"
		android:scrollHorizontally="true"
		android:layout_marginLeft="5dip"  />

	<TextView
		android:id="@+id/file_duration"
		android:layout_width="100dip"
		android:layout_height="20dip"
		android:layout_marginLeft="5dip"
		android:scrollHorizontally="true"
		android:gravity="center_vertical"
		android:layout_toRightOf="@+id/file_size"
		  />

		<!-- ***************************************************************************** -->

	<TextView
		android:id="@+id/file_name"
		android:layout_marginLeft="6dip"
		android:layout_width="fill_parent"
		android:layout_height="26dip"
		android:scrollHorizontally="true"
		android:textScaleX="1"
		android:layout_toRightOf="@+id/file_icon"
		android:layout_below="@+id/file_format"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:ellipsize="marquee"
		android:gravity="bottom" />

	<TextView
		android:id="@+id/file_artist"
		android:layout_width="fill_parent"
		android:layout_height="32dip"
		android:layout_below="@id/file_name"
		android:layout_alignLeft="@id/file_name"
		android:layout_alignParentBottom="true"
		android:scrollHorizontally="true"
		android:singleLine="true"
		android:textScaleX="1"
		android:gravity="top" />

	<ImageView
		android:id="@+id/file_icon"
		android:layout_width="48dip"
		android:layout_below="@id/file_format"
		android:layout_marginTop="5dip"
		android:layout_height="48dip"
		android:layout_gravity="center_vertical"
		/>

</RelativeLayout>